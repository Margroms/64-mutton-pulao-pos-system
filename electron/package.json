{
  "name": "restaurant-pos-electron",
  "version": "1.0.0",
  "description": "Restaurant POS System with Bluetooth Printing",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "dependencies": {
    "bluetooth-serial-port": "^2.2.7",
    "electron": "^28.0.0"
  },
  "devDependencies": {
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.restaurant.pos",
    "productName": "Restaurant POS System",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.business"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
